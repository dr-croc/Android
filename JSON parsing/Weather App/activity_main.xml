<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
    android:id="@+id/am_txt_showData"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="40sp"
        android:textColor="@color/black"
      android:layout_centerHorizontal="true"
        android:text="Weather "
        android:layout_marginTop="10dp"
    />
    <EditText
        android:id="@+id/am_edt_getData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/am_txt_showData"
        android:layout_centerHorizontal="true"
        />
   <Button
        android:id="@+id/am_btn_fetchData"
        android:layout_below="@+id/am_edt_getData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Get Weather"
        />
    <TextView
        android:id="@+id/am_txt_displayData"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/am_btn_fetchData"
        android:layout_margin="10dp"
        />
    
</RelativeLayout>
